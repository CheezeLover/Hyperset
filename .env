# Domain — change this one line to switch domains, then restart gateway
HYPERSET_DOMAIN=hyperset.internal

# Superset config
SUPERSET_SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
SUPERSET_DB_PASSWORD=a-strong-password-here

# Auth crypto key — generate your own with: openssl rand -hex 32
AUTH_CRYPTO_KEY=f3a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0

# OAuth credentials (only needed when using an external provider)
OAUTH_CLIENT_ID=placeholder
OAUTH_CLIENT_SECRET=placeholder
ENTRA_TENANT_ID=common
OIDC_METADATA_URL=https://localhost/.well-known/openid-configuration


# OPENWEBUI config
WEBUI_SECRET_KEY=change-me-to-a-long-random-secret
ENABLE_SIGNUP=true


# Superset Environment Configuration
# Copy this file to .env and update the values

# CRITICAL: Change this secret key in production!
# Generate a secure key with: openssl rand -base64 42
SUPERSET_SECRET_KEY=your-secret-key-change-this-in-production

# Admin credentials (first time setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
ADMIN_EMAIL=admin@superset.com
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User

# Superset settings
SUPERSET_LOAD_EXAMPLES=yes
SUPERSET_PORT=8088

# Database (SQLite by default)
# SQLite database will be stored at: /app/superset_home/superset.db